    "learning_rate": 1e-4,
    "epochs": 10,
    "device": "cuda",
    "replay_strategy": "reservoir",
    "replay_buffer_size": 1000,
    "replay_batch_size": 32,
    "log_dir": "experiments/logs",
    "checkpoint_dir": "checkpoints",
    "tensorboard_dir": "experiments/logs/tensorboard",
    "eval_every": 1,
    "save_every": 1
} 