{
    "data_dir": "data",
    "protocol_dir": "data/protocols",
    "batch_size": 32,
    "num_workers": 4,
    "ssl_pretrained_path": "path/to/ssl/model",
    "conformer_config": {
        "input_dim": 1024,
        "encoder_dim": 256,
        "num_encoder_layers": 6,
